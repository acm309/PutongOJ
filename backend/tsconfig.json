{
  "compilerOptions": {
    "target": "ES2018",
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
    "allowJs": true,
    "checkJs": false,
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test",
    "dist"
  ]
}
